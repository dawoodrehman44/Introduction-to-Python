#if
a = 33
b = 200
if b > a:
    print("b is greater than a")

#elif
a = 33
b = 33
if b > a:
    print("b is greater than a")
elif a == b:
    print("a and b are equal")

#else
a = 199
b= 28
if b > a:
    print("b is greater than a")
elif a ==b :
    print("a and b are equal")
else:
    print("a is greater than b")

#else without elif
a =199
b = 28
if b > a :
    print("b is greater than a")
else:
    print("a is greater than b")

# Multiple else statements with 3 or more conditions
a = 280
b = 280
print("A") if a > b else print ("=") if a == b else print ("B")

# And (A logical operator used to combined conditional operators)
a = 210
b = 43
c = 600
if a > b and c > a:
    print("Both conditions are true")

# Or (A logical operator used to combine conditional operators)
a = 300
b = 45
c = 600
if a > b or a > c:
    print("Atleast one of the condition is True")

# Not (A logical operator used to reverse the result of the conditional statement)
if not a > c:
    print("a is NOT greater than b")

# Nested if (if statemetns inside if)
x = 41
if x > 10:
    print("Above ten,")
    if x > 20:
        print("and also above 20!")
    else:
        print("but not above 20,")
# Pass (Pass statement can be used to avoid an error for some reason if there is no content in if)
a = 23
b = 100
if b > a:
    pass

## EXCERCISE
score = float(input("Enter the student's score: "))

if score >= 90:
    grade = 'A'
elif score >= 80:
    grade = 'B'
elif score >= 70:
    grade = 'C'
elif score >= 60:
    grade = 'D'
else:
    grade = 'F'

print("The student's grade is:", grade)
###########################################
num1 = float(input("Enter the first number: "))
num2 = float(input("Enter the second number: "))

if num1 > num2:
    print("The first number is greater than the second number.")
elif num1 < num2:
    print("The second number is greater than the first number.")
else:
    print("Both numbers are equal.")
